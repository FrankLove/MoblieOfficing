<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/filelist_title"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/filelist_secondbar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/filelist_title">

        <Button
            android:id="@+id/filelist_sortBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="时间排序"/>

        <Button
            android:id="@+id/filelist_editBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/edit"/>

        <Button
            android:id="@+id/filelist_newfolderBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/newfolder"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/filelist_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/filelist_secondbar">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>